        "@react-three/fiber": "^9.4.2",
        "@react-three/postprocessing": "^3.0.4",
        "@react-three/rapier": "^2.2.0",
        "miniplex": "^2.0.0",
        "nipplejs": "^0.10.2",
        "react": "^19.2.3",
        "react-dom": "^19.2.3",
        "three": "^0.182.0",
        "tone": "^15.1.22",
        "yuka": "^0.7.8",
        "zustand": "^5.0.9"
